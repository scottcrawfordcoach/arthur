# Normalize text files for consistent diffs across platforms
* text=auto

# Force LF endings for source and config files
*.js      text eol=lf
*.jsx     text eol=lf
*.ts      text eol=lf
*.tsx     text eol=lf
*.json    text eol=lf
*.mjs     text eol=lf
*.cjs     text eol=lf
*.md      text eol=lf
*.mdx     text eol=lf
*.sh      text eol=lf
*.py      text eol=lf
*.sql     text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.css     text eol=lf
*.scss    text eol=lf
*.html    text eol=lf
*.xml     text eol=lf
*.svg     text eol=lf

# Windows scripts keep CRLF
autoexec.bat text eol=crlf
*.bat       text eol=crlf
*.cmd       text eol=crlf
*.ps1       text eol=crlf

# Treat binary assets properly
*.zip    binary
*.gz     binary
*.bz2    binary
*.7z     binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.mp3    binary
*.mp4    binary
*.wav    binary
*.pdf    binary
*.eot    binary
*.ttf    binary
*.otf    binary
*.woff   binary
*.woff2  binary
*.sqlite binary
*.db     binary
